<Window x:Class="DeltaForceTracker.Views.RegionSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select OCR Region"
        WindowState="Maximized"
        WindowStyle="None"
        Background="#80000000"
        Topmost="True"
        Cursor="Cross"
        AllowsTransparency="True">
    
    <Canvas x:Name="Canvas"
            Background="Transparent"
            MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
            MouseMove="Canvas_MouseMove"
            MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
        
        <Rectangle x:Name="SelectionRectangle"
                  Stroke="Red"
                  StrokeThickness="2"
                  Fill="#4000FF00"
                  Visibility="Collapsed"/>
        
        <TextBlock x:Name="InstructionText"
                  Text="Click and drag to select the region containing 'Total Assets' and the balance value. Press ESC to cancel."
                  Foreground="White"
                  FontSize="20"
                  FontWeight="Bold"
                  Canvas.Left="50"
                  Canvas.Top="50"
                  Background="#D0000000"
                  Padding="20"
                  IsHitTestVisible="False"/>
    </Canvas>
</Window>

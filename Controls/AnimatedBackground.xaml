<UserControl x:Class="DeltaForceTracker.Controls.AnimatedBackground"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <!-- Base gradient background -->
        <Rectangle>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F1419" Offset="0"/>
                    <GradientStop Color="#1A1F26" Offset="0.5"/>
                    <GradientStop Color="#0F1419" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Animated hex pattern layer -->
        <Canvas x:Name="HexCanvas" Opacity="0.15">
            <!-- Hex pattern will be generated in code-behind -->
        </Canvas>

        <!-- Subtle animated glow overlay -->
        <Rectangle x:Name="GlowOverlay" Opacity="0.05">
            <Rectangle.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#00F0FF" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
